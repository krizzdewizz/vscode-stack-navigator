{
    "rulesDirectory": [
        "node_modules/tslint-microsoft-contrib"
    ],
    "rules": {
        "no-for-in": true,
        "no-unnecessary-field-initialization": true,
        "prefer-const": true,
        "prefer-array-literal": true,
        "class-name": true,
        "curly": true,
        "eofline": false,
        "forin": true,
        "indent": [
            true,
            4
        ],
        "label-position": true,
        "max-line-length": [
            false,
            140
        ],
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            "log",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-var-keyword": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-string-literal": true,
        "no-trailing-whitespace": true,
        "no-inferrable-types": [
            true
        ],
        "no-unused-expression": true,
        "no-unused-variable": [
            true,
            {
                "ignore-pattern": "^_"
            },
            "check-parameters"
        ],
        "no-use-before-declare": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "no-null-keyword": true,
        "quotemark": [
            true,
            "single"
        ],
        "radix": true,
        "semicolon": [
            true
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}